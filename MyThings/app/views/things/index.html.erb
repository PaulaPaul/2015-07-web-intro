<div class="panel panel-body">
<p id="notice"><%= notice %></p>

<h1>Listing Things</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= thing.name %></td>
        <td><%= thing.color %></td>
        <td><%= image_tag(thing.photo, :width => 100) if thing.photo.present? %></td>
        <td><%= link_to 'Show', thing, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing),:class => "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path, :class => "btn btn-primary" %>
</div>
